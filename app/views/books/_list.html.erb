<div class='col-md-8 offset-md-1'>
  <section>
    <h2>Books</h2>
    <table class='table'>
      <thead><tr><th></th><th col=2>Title</th><th col=4>Opinion</th></tr></thead>
      <tbody>
        <% books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image(50, 50) %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td>
              <%= book.body %>
            </td>
            <td>
              <% if book.favorited_by?(current_user) %>
                <%= link_to book_favorite_path(book.id), method: :delete do %>
                  <i class="fa-solid fa-heart"></i><%= book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorite_path(book.id), method: :post do %>
                  <i class="fa-regular fa-heart"></i><%= book.favorites.count %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>  
      </tbody>
    </table>
  </section>
</div>