<div class='col-md-8 offset-md-1'>
  <section>
    <h2>Users</h2>
    <%= link_to "グループを作成する", new_group_path %> | 
    <%= link_to "グループ一覧", groups_path %>
    <table class='table'>
      <thead><tr><th col=2>Image</th><th col=2>Name</th><th></th></tr></thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100, 100) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>フォロー数: <%= user.followings.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td><%= render 'relationships/btn', user: user, option: {class: "follow-link"} %></td>
            <td>
              <%= link_to 'Show', user_path(user.id) %>
            </td>
          </tr>
        <% end %>  
      </tbody>
    </table>
  </section>
</div>