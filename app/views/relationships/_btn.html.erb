<% if current_user != user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォローを外す', user_relationships_path(user), method: :delete, class: option[:class].presence || 'btn btn-info' %>
  <% else %>
    <%= link_to 'フォローする', user_relationships_path(user), method: :post, class: option[:class].presence || 'btn btn-success' %>
  <% end %>
<% end %>