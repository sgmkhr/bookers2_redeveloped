<table>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= image_tag book_comment.user.get_profile_image(50, 50) %>
          <%= link_to book_comment.user.name, user_path(book_comment.user_id), class: 'd-block' %>
        </td>
        <td>
          <%= book_comment.comment %>
        </td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to 'Destroy', book_book_comment_path(book, book_comment), method: :delete, class: 'btn btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: [book, book_comment] do |f| %>
  <%= f.text_area :comment, rows:'5', class: 'w-100' %>
  <%= f.submit '送信' %>
<% end %>